@model ProjectRider.Models.Project

@{
    ViewBag.Title = "Create";
}

<div class="wrapper">
    @using (Html.BeginForm("Create", "Project", FormMethod.Post, new { @class = "project-create" }))
    {
        @Html.AntiForgeryToken()
        <div class="create-header">
            Create Project
        </div>
        <div class="create-title">
            <div class="create-title-label">Title</div>
            <input class="create-title-content" name="title" value="@Model.Title"/>
            @Html.ValidationMessageFor(m=>m.Title)
        </div>
        <div class="create-description">
            <div class="create-description-label">Description</div>
            <textarea rows="3" class="create-description-content" name="description" value="@Model.Description">
                             
</textarea>
            @Html.ValidationMessageFor(m => m.Description)
        </div>
        <div class="create-budget">
            <div class="create-budget-label">Budget</div>
            <input type="number" min="0" class="create-budget-content" name="budget" value="@Model.Budget"/>
            @Html.ValidationMessageFor(m => m.Budget)
        </div>
        <div class="create-button-holder">
            <button type="submit" class="submit-button">Create Project</button>
            <a type="button" href="/" class="back-button">Back</a>
        </div>
    }
</div>
